<AnchorPane minHeight="800.0" minWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.view.LoginController">
   <children>
      <Label layoutX="324.0" layoutY="78.0" text="Starfleet Personnel" textFill="#0026ff">
