      <Label alignment="CENTER" layoutX="138.0" layoutY="381.0" text="Enter Your Username: ">
         <font>
            <Font name="HoloLens MDL2 Assets" size="18.0" />
         </font>
      </Label>
      <Label alignment="CENTER" layoutX="180.0" layoutY="461.0" prefHeight="27.0" prefWidth="96.0" text="Passphrase:">
